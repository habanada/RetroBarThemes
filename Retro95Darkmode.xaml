<!--
    Theme: Windows Retro Dark Mode
    Erstellt von: Selahattin Erkoc
    Erstellt am: 08.09.2025
    Installationspfad: %AppData%\RetroBar\Themes\
    Hinweise:
      - Dark Mode Variante des Windows 95/98 Themes
      - Farben angepasst für dunkle Hintergründe
-->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Boolean x:Key="InvertSystemNotifyIcons">False</sys:Boolean>

    <SolidColorBrush x:Key="ButtonHighlight" Color="#303030" />
    <SolidColorBrush x:Key="ButtonInnerHighlight" Color="#404040" />
    <SolidColorBrush x:Key="ButtonLight" Color="#505050" />
    <SolidColorBrush x:Key="ButtonFace" Color="#2b2b2b" />
    <SolidColorBrush x:Key="ButtonShadow" Color="#707070" />
    <SolidColorBrush x:Key="ButtonDarkShadow" Color="#000000" />
    <SolidColorBrush x:Key="ButtonFlashingFace" Color="#004080" />

    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ButtonFlashingForeground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ClockForeground" Color="#FFFFFF" />

    <SolidColorBrush x:Key="Menu" Color="#2b2b2b" />
    <SolidColorBrush x:Key="MenuText" Color="#FFFFFF" />
    <SolidColorBrush x:Key="MenuHighlight" Color="#404040" />
    <SolidColorBrush x:Key="MenuHighlightText" Color="#00FF00" />

    <SolidColorBrush x:Key="Window" Color="#1e1e1e" />
    <SolidColorBrush x:Key="WindowText" Color="#FFFFFF" />
    <SolidColorBrush x:Key="AppWorkspace" Color="#252525" />
    <SolidColorBrush x:Key="GrayText" Color="#888888" />

    <SolidColorBrush x:Key="Highlight" Color="#0078D7" />
    <SolidColorBrush x:Key="HighlightText" Color="#FFFFFF" />

    <SolidColorBrush x:Key="HotTrackingColor" Color="#3399FF" />

    <SolidColorBrush x:Key="InactiveBorder" Color="#404040" />
    <SolidColorBrush x:Key="ActiveBorder" Color="#606060" />

    <SolidColorBrush x:Key="ActiveCaption" Color="#202020" />
    <SolidColorBrush x:Key="InactiveCaption" Color="#404040" />
    <SolidColorBrush x:Key="ActiveCaptionText" Color="#FFFFFF" />
    <SolidColorBrush x:Key="InactiveCaptionText" Color="#AAAAAA" />
</ResourceDictionary>
